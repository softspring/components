{% trans_default_domain 'sfs_components' %}
{% set pagination_route = pagination_route is defined ? pagination_route : app.request.attributes.get('_route') %}
{% set pagination_route_attributes = pagination_route_attributes is defined ? pagination_route_attributes : app.request.attributes.get('_route_params') %}
{% set query_params = query_params is defined ? query_params : app.request.query.all() %}

<nav aria-label="Page navigation" class="py-3 d-flex justify-content-center justify-content-md-between align-items-center flex-column flex-md-row">
    <span class="text-gray-600 font-weight-bold">{{ 'pager.total'|trans }} {{ collection.total }}</span>
    <ul class="pagination mb-0">
        {% if not collection.isFirstPage %}
            <li class="page-item">
                <a class="page-link" href="{{ url(pagination_route, query_params|merge(pagination_route_attributes)|merge({ 'page': collection.prevPage })) }}" aria-label="Previous">
                    <span class="bi bi-chevron-left align-middle"></span>
                    <span class="page-prev-text">{{ 'pager.prev'|trans }}</span>
                </a>
            </li>
        {% endif %}

        {% for page in collection.collapsedPages(7, true) %}
            {% if page == null %}
                <li class="page-item">...</li>
            {% else %}
                <li class="page-item {{ page == collection.page | default(false)? ' active' : ''}}"><a class="page-link" href="{{ url(pagination_route, query_params|merge(pagination_route_attributes)|merge({ 'page': page })) }}">{{ page }}</a></li>
            {% endif %}
        {% endfor %}

        {% if not collection.isLastPage %}
            <li class="page-item">
                <a class="page-link" href="{{ url(pagination_route, query_params|merge(pagination_route_attributes)|merge({ 'page': collection.nextPage })) }}" aria-label="Next">
                    <span class="page-next-text">{{ 'pager.next'|trans }}</span>
                    <span class="bi bi-chevron-right align-middle"></span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>
