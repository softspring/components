{% if filter_form|default(false) and (collection|length or filter_form.vars.data|filter(v=>v) is not empty) %}
    {% block filters_form %}
        {{ form_start(filter_form) }}
        {% block filters %}
            {{ form_widget(filter_form) }}
        {% endblock filters %}
        {{ form_rest(filter_form) }}
        {{ form_end(filter_form) }}
    {% endblock filters_form %}
{% endif %}

{% if collection|length %}
    <table class="table {{ classes is not defined ? 'table-borderless table-striped table-hover ' ~ (append_classes|default(''))  : classes }}">
        {% block thead %}
            <thead>
            <tr>
                {% block ths %}
                {% endblock ths %}
            </tr>
            </thead>
        {% endblock thead %}

        {% block tbody %}
            <tbody>
            {% for element in collection %}
                {# TODO: make row clickable url configurable #}
                <tr>
                    {% block tds %}
                        {# use element variable to show row data #}
                    {% endblock tds %}

                    {% block actions %}
                    {% endblock actions %}
                </tr>
            {% endfor %}
            </tbody>
        {% endblock tbody %}

        {% block tfooter %}
            {% if collection.pages|default(false) %}
                <tfoot>
                <tr>
                    <td colspan="20">
                        {% include '@SfsComponents/paginator/pager.html.twig' with {'collection':collection, 'pagination_route': pagination_route|default(false), 'pagination_route_attributes': pagination_route_attributes|default([])} %}
                    </td>
                </tr>
                </tfoot>
            {% endif %}
        {% endblock tfooter %}
    </table>
{% else %}
    {% block empty %}
        <div class="p-5 m-5">
            {% if filter_form|default(false) and filter_form.vars.data|filter(v=>v) is not empty %}
                <p class="text-center text-muted">{{ no_matches_message|default('No elements found, try to be less restrictive.') }}</p>
            {% else %}
                {% block empty_message %}
                    <p class="text-center text-muted">{{ empty_message|default('The list is empty') }}</p>
                {% endblock empty_message %}
            {% endif %}
        </div>
    {% endblock empty %}
{% endif %}

